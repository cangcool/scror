<h1>Listing task_positions</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Sprint board column</th>
      <th>Is block</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_positions.each do |task_position| %>
      <tr>
        <td><%= task_position.task_id %></td>
        <td><%= task_position.sprint_board_column_id %></td>
        <td><%= task_position.is_block %></td>
        <td><%= link_to 'Show', task_position %></td>
        <td><%= link_to 'Edit', edit_task_position_path(task_position) %></td>
        <td><%= link_to 'Destroy', task_position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

