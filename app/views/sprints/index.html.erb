<h1>Listing sprints</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Project</th>
      <th>Sprint order number</th>
      <th>Start at</th>
      <th>End at</th>
      <th>Sprint state</th>
      <th>Creator</th>
      <th>Modifier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sprints.each do |sprint| %>
      <tr>
        <td><%= sprint.name %></td>
        <td><%= sprint.description %></td>
        <td><%= sprint.project_id %></td>
        <td><%= sprint.sprint_order_number %></td>
        <td><%= sprint.start_at %></td>
        <td><%= sprint.end_at %></td>
        <td><%= sprint.sprint_state_id %></td>
        <td><%= sprint.creator_id %></td>
        <td><%= sprint.modifier_id %></td>
        <td><%= link_to 'Show', sprint %></td>
        <td><%= link_to 'Edit', edit_sprint_path(sprint) %></td>
        <td><%= link_to 'Destroy', sprint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sprint', new_sprint_path %>

